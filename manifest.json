{
  "manifest_version": 3,
  "name": "Become Hurtiglinks",
  "version": "3.0",
  "description": "Hurtig adgang til daglige platforme, annoncebiblioteker, tracking, AI og interne links.",
  "action": {
    "default_title": "Become Hurtiglinks",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}